void ispis_table()
{
    int tabla[11][11];
    tabla[0][1] = 1;
    tabla[0][2] = 2;
    tabla[0][3] = 3;
    tabla[0][4] = 4;
    tabla[0][5] = 5;
    tabla[0][6] = 6;
    tabla[0][7] = 7;
    tabla[0][8] = 8;
    tabla[0][9] = 9;
    tabla[0][10] = 10;

    tabla[1][0] = 1;
    tabla[2][0] = 2;
    tabla[3][0] = 3;
    tabla[4][0] = 4;
    tabla[5][0] = 5;
    tabla[6][0] = 6;
    tabla[7][0] = 7;
    tabla[8][0] = 8;
    tabla[9][0] = 9;
    tabla[10][0] = 10;
    printf("%c    %d %d %d %d %d %d %d %d %d %d\n", 0, tabla[0][1], tabla[0][2], tabla[0][3], tabla[0][4], tabla[0][5], tabla[0][6], tabla[0][7], tabla[0][8], tabla[0][9], tabla[0][10]);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[1][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[2][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[3][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[4][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[5][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[6][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[7][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[8][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d | %c %c %c %c %c %c %c %c %c %c\n", tabla[9][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
    printf("%d| %c %c %c %c %c %c %c %c %c %c\n", tabla[10][0], 88, 88, 88, 88, 88, 88, 88, 88, 88, 88);
}
void pravila()
{
    char x[2];
    printf("Igra se na tabli 10x10.\nIma dva igraca.\nSvako ima da postavi:\n-4 broda duzine 1\n-3 broda duzine 2\n-2 broda duzine 3\n-1 brod duzine duzine 4.\nRazdaljina izmedju brodova mora biti 1.\n");
    printf("Pritisni bilo koje dugme da nastavis.\n");
}
int unos_polja()
{
    int x;
    a:
    scanf("%d",&x);
    if(x<1 || x>10)
    {
        printf("Greska u unos\n");
        goto a;
    }
    return x;
}
